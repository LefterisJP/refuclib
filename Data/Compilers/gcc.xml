<?xml version="1.0" encoding="UTF-8" ?>
<compiler_data>
<macroargument>-D</macroargument>
<compiler>
	<name>gcc</name>
	<cmd>-c -I$INCLUDES $FLAGS $FILE -o ./$OBJDIRNAME/$FILE.o</cmd>
	<flags>-static-libgcc 
	<win32> -DREFU_WIN32_VERSION</win32>
	<linux>-D_GNU_SOURCE -DREFU_LINUX_VERSION</linux>
	</flags>
	<test_cmd>$FILE -I$REFUINCLUDE -L$LIBDIR $LIBNAME -o $OUTPUT $FLAGS</test_cmd>
	<test_flags>-Wall
		<linux>-lrt -lpthread</linux>
	</test_flags>
</compiler>
<linker>
	<dynamic_linker>
		<flags>
			<linux>-lrt -lpthread</linux>
		</flags>
		<name>gcc</name>
		<cmd>
			<win32>-shared $FLAGS $OBJECTS -o $OUTPUT.dll</win32>
			<linux>-shared $FLAGS $OBJECTS -o $OUTPUT.so</linux>
		</cmd>
	</dynamic_linker>
	<static_linker>
		<name>ar</name>
		<cmd>rcs ./$OUTPUT.a $OBJECTS</cmd>
	</static_linker>
</linker>
</compiler_data>
